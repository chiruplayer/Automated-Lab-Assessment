extends layout
block content
  .background.bodyPadding
    .row
      .col-md-12
        .mainTitle.text(align='center') {LabWork}
    .row
      div(align='center').col-md-6
        h2(align='center') Teacher Login
        br
        form(method='POST' action='/teacherDashboard')
          p
            input#email1.form-control(type='email' placeholder='email')
          p
            input#pwd1.form-control(type='password' placeholder='password')
          p
            button.btn.btn-default.code-send(type='submit' onclick='loginAsTeacher(event)') Submit

      div(align='center').col-md-6
        h2(align='center') Student Login
        br
        form(method='POST' action='/studentDashboard' enctype='application/x-www-form-urlencoded')
          p
            input#email2.form-control(name='email2' type='email' placeholder='email')
          p
            input#pwd2.form-control(name='pwd2' type='password' placeholder='password')
          p
            button.btn.btn-default.code-send(type='submit') Submit
          
